    <div id="cliente_login" class="d-none">
        <form id="form-cliente">
            <div class="input-group mb-1">
                <span class="input-group-text" id="basic-addon-usuario">
                    <i class="fas fa-user"></i>
                </span>
                <input id="usuario" type="text" class="form-control" placeholder="Usuario" aria-label="Usuario"
                    aria-describedby="basic-addon-usuario" autocomplete="username">
            </div>
            <div class="input-group mb-1">
                <span class="input-group-text" id="basic-addon-clave">
                    <i class="fas fa-key"></i>
                </span>
                <input id="clave" type="password" class="form-control" placeholder="ContraseÃ±a" aria-label="Clave"
                    aria-describedby="basic-addon-clave" autocomplete="current-password">
            </div>
            <div class="d-grid gap-2">
                <button id="boton-ingresar-cliente" class="btn btn-primary" type="button" onclick="cliente_login()">
                    <i class="fas fa-sign-in-alt"></i> Ingresar
                </button>
            </div>
        </form>
        <div id="datos-cliente" class="d-none">
            <div class="input-group mb-1">
                <span class="input-group-text" id="basic-addon-cliente-nombre">
                    <i class="fas fa-user"></i>
                </span>
                <input id="cliente_nombre" type="text" class="form-control" placeholder="Cliente nombre"
                    aria-label="Cliente Nombre" aria-describedby="basic-addon-cliente-nombre" readonly>
            </div>
            <div class="d-grid gap-2">
                <button id="boton-salir-cliente" class="btn btn-danger" type="button" onclick="cliente_logout()">
                    <i class="fas fa-sign-out-alt"></i> Salir
                </button>
            </div>
        </div>
    </div>
    <div id="detalle_carrito" class="d-none">
        <table class="table table-striped table-hover table-bordered table-dark">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tabla-carrito-datos">

            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4">TOTALES</td>
                    <td id="total-carrito" class="text-end">0</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="d-grid gap-2">
            <button class="btn btn-danger" type="button" onclick="comprar()">
                <i class="bi bi-cart-fill"></i> Comprar
            </button>
        </div>
    </div>
    <div id="carouselExampleCaptions" class="carousel slide animate__animated animate__fadeIn" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="./img/carousel/1.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5></h5>
                    <p></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="./img/carousel/2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5></h5>
                    <p></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="./img/carousel/3.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5></h5>
                    <p></p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="input-group mb-3">
        <input id="buscar" type="text" class="form-control" placeholder="Quiero comprar este producto ..."
            aria-label="Buscar" aria-describedby="basic-addon-buscar" autofocus>
        <span class="input-group-text" id="basic-addon-buscar">
            <i class="fas fa-search"></i>
        </span>
    </div>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        <% result.forEach(function(producto){ %>
            <div class="col">
                <div class="card">
                    <img src="./img/productos/<%= producto.id %>.jpg" alt="<% producto.nombre %>" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">
                            <p>
                                <%= producto.nombre %>
                            </p>
                            <p>
                                <%= producto.precio %>
                            </p>
                        </h5>
                        <p class="card-text">
                            <%= producto.descripcion %>
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-sm btn-primary" data-id_producto=<%=producto.id %>
                            onclick="agregar_carrito(this)">
                            <i class="fas fa-cart-plus"></i> Comprar
                        </button>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>

